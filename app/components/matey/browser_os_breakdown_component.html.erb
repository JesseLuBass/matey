<div class="card bg-primary text-light">
  <div class="card-body">
    <div class="row">
      <h5 class="text-center">Browser and OS Breakdown</h5>
      <div class="col">
        <p class="text-center">Since <%= time_ago_in_words(@time_window.ago).titleize %> Ago</p>
        <table class='table table-hover table-borderless'>
          <thead class='table-dark'>
            <th>Browser</th>
            <th class='text-center'>Visitor Count</th>
          </thead>
          <tbody>
            <% @browsers.each do |key, value| %>
              <tr>
                <td><%= key %></td>
                <td class='text-center'><%= value %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <table class='table table-hover table-borderless'>
          <thead class='table-dark'>
            <th>OS</th>
            <th class='text-center'>Visitor Count</th>
          </thead>
          <tbody>
            <% @oss.each do |key, value| %>
              <tr>
                <td><%= key %></td>
                <td class='text-center'><%= value %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
